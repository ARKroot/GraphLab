<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE preferences SYSTEM 'http://java.sun.com/dtd/preferences.dtd'>
<preferences EXTERNAL_XML_VERSION="1.0">
	<root type="system">
		<map />
 		<node name="net">
			<map />
  			<node name="interdirected">
				<map />
   				<node name="autoupdate">
					<map>
						<entry key="repositoryurl" value="http://some_repository.url.com/release" />
						<entry key="moduleurl" value="trunk/someapplication" />
						<entry key="repositoryusername" value="username" />
						<entry key="repositorypassword" value="password" />
						<entry key="applicationdirectory" value="C:\local_directory" />
						<entry key="usegui" value="true" />
						<entry key="windowtitle" value="Application Automated Update..." />
						<entry key="instructions" value="Please wait while we update your application." />
						<!--   <entry key="imageurl" value="http://www.somecompany.com/images/support.jpg" /> -->
						<entry key="imageurl" value="./images/logo.jpg" /> 
						<entry key="screenwidth" value="500" />
						<entry key="screenheight" value="500" />
						<entry key="imagewidth" value="241" />
						<entry key="imageheight" value="50" />
						<entry key="autoclose" value="false" />
						<entry key="buttontext" value="Continue &gt;&gt;" />
						<entry key="launchant" value="true" />
						<entry key="antbuildfile" value="test_build.xml" />
						<entry key="antlocation" value="." />
						<entry key="updatecheckclass" value="net.interdirected.autoupdate.DefaultUpdateCheck" />
		            </map>
 		         </node>
  	        </node>
        </node>
    </root>
</preferences>
